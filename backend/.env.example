# BrightSign Backend — Environment Variables
# Copy to .env and fill in real values. NEVER commit .env to git.

MEDUSA_ADMIN_ONBOARDING_TYPE=default
DATABASE_URL=postgresql://medusa:YOUR_DB_PASSWORD@localhost:5432/medusa
STORE_CORS=http://localhost:8000,http://localhost:3000
ADMIN_CORS=http://localhost:5173,http://localhost:9000
AUTH_CORS=http://localhost:5173,http://localhost:9000,http://localhost:8000,http://localhost:3000
REDIS_URL=redis://localhost:6379

# REQUIRED — generate with: openssl rand -hex 32
JWT_SECRET=
COOKIE_SECRET=

# Stripe
STRIPE_API_KEY=
STRIPE_WEBHOOK_SECRET=

# AI Buddy integration
AI_BUDDY_API_KEY=

# S3 / MinIO (optional — falls back to local file storage)
# S3_ENDPOINT=
# S3_FILE_URL=
# S3_ACCESS_KEY=
# S3_SECRET_KEY=
# S3_REGION=us-east-1
# S3_BUCKET=brightsign-media

# Email (Resend)
# RESEND_API_KEY=
# RESEND_AUDIENCE_ID=

# Bank payment matching (IMAP)
# BANK_IMAP_HOST=
# BANK_IMAP_USER=
# BANK_IMAP_PASSWORD=
# BANK_IMAP_PORT=993

# Admin notification email
# ADMIN_EMAIL=obchod@brightsign.cz

# Backup encryption (set on VPS via Coolify)
# BACKUP_GPG_PASSPHRASE=
