# =============================================================================
# BrightSign EU E-shop - Production Environment Variables
# Copy to .env.production and fill in all values
# Generate secrets with: openssl rand -hex 32
# =============================================================================

# --- PostgreSQL ---
POSTGRES_USER=medusa
POSTGRES_PASSWORD=CHANGE_ME_STRONG_PASSWORD
POSTGRES_DB=medusa

# --- Redis ---
REDIS_PASSWORD=GENERATE_WITH_OPENSSL_RAND_HEX_32
REDIS_URL=redis://:${REDIS_PASSWORD}@redis:6379

# --- Medusa Backend ---
JWT_SECRET=GENERATE_WITH_OPENSSL_RAND_HEX_32
COOKIE_SECRET=GENERATE_WITH_OPENSSL_RAND_HEX_32

# URLs
BACKEND_URL=https://api.brightsign.cz
NEXT_PUBLIC_BASE_URL=https://brightsign.cz

# CORS - comma-separated
STORE_CORS=https://brightsign.cz,https://www.brightsign.cz
ADMIN_CORS=https://brightsign.cz
AUTH_CORS=https://brightsign.cz,https://www.brightsign.cz

# --- Stripe ---
STRIPE_API_KEY=sk_live_XXXXXXXXXXXX
STRIPE_WEBHOOK_SECRET=whsec_XXXXXXXXXXXX
NEXT_PUBLIC_STRIPE_PUBLISHABLE_KEY=pk_live_XXXXXXXXXXXX

# --- Packeta / Zasilkovna ---
NEXT_PUBLIC_PACKETA_API_KEY=XXXXXXXXXXXX

# --- MinIO / S3 Storage ---
MINIO_ROOT_USER=brightsign
MINIO_ROOT_PASSWORD=CHANGE_ME_STRONG_PASSWORD
S3_ENDPOINT=http://minio:9000
S3_BUCKET=brightsign-media
S3_ACCESS_KEY=brightsign
S3_SECRET_KEY=CHANGE_ME_STRONG_PASSWORD

# --- Medusa Publishable Key (get from /app after first run) ---
NEXT_PUBLIC_MEDUSA_PUBLISHABLE_KEY=pk_your_key_here

# --- Email (Resend REST API) ---
RESEND_API_KEY=re_XXXXXXXXXXXX
RESEND_FROM_EMAIL=obchod@brightsign.cz

# --- Sentry Error Tracking (optional) ---
NEXT_PUBLIC_SENTRY_DSN=
SENTRY_DSN=
